<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center">
<TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_7"/>

    <Button
            android:text="@string/myIndeterminateProgressBar"
            android:id="@+id/buttonmyIndeterminateProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:text="@string/myWebViewProgressBar"
            android:id="@+id/buttonmyWebViewWithProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:text="@string/myDialogProgressBar"
            android:id="@+id/buttonmyDialogProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:text="@string/myStyleProgressBar"
            android:id="@+id/buttonmyStyleProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:text="@string/myAsyncTask"
            android:id="@+id/buttonmyAsyncTaskProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>