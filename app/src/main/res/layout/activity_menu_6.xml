<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <Button
                android:text="Click ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonClick" android:layout_weight="1"/>
        <Button
                android:text="Slider ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonSlider" android:layout_weight="1"/>
        <Button
            android:text="Circular ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonCircular" android:layout_weight="1"/>
        <Button
            android:text="Zoom In - Zoom Out ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonZoom" android:layout_weight="1"/>
        <Button
            android:text="Parallax ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonParallax" android:layout_weight="1"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>