<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center">

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:text="Horizontal Progress Bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonHorizontal"
            android:layout_weight="1"/>
        <RadioButton
                android:text="Circle Progress Bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonCicle"
                android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="@string/process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonProcess"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarHorizontal"
            tools:visibility="invisible"
            android:max="100"
            android:progress="10" android:visibility="invisible"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarCircle"
            tools:visibility="invisible"
            android:max="100"
            android:progress="1" android:visibility="invisible"/>
</LinearLayout>